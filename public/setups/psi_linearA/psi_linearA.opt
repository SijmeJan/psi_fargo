# PSI FARGO2D setup using 1 dust fluids

FLUIDS := 0 1
NFLUIDS = 2
FARGO_OPT += -DNFLUIDS=${NFLUIDS}

FARGO_OPT +=  -DX
FARGO_OPT +=  -DY
FARGO_OPT +=  -DZ
FARGO_OPT +=  -DCARTESIAN
FARGO_OPT +=  -DSHEARINGBOX
FARGO_OPT +=  -DSHEARINGBC
FARGO_OPT +=  -DISOTHERMAL
FARGO_OPT +=  -DDRAGFORCE
FARGO_OPT +=  -DCONSTANTSTOKESNUMBER
MONITOR_SCALAR = MOM_X | MOM_Y | MOM_Z

#Cuda blocks
ifeq (${GPU}, 1)
FARGO_OPT += -DBLOCK_X=16
FARGO_OPT += -DBLOCK_Y=16
FARGO_OPT += -DBLOCK_Z=1
endif
